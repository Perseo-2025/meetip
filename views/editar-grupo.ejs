<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %></h1>

    <form class="default-form" method="POST">
        <div class="campo">
            <label for="">Nombre</label>
            <input type="text" value="<%=grupo.nombre%>" name="nombre" placeholder="Nombre Grupo">
        </div>

        <div class="campo descripcion">
            <label for="">Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" value="<%=grupo.descripcion%>" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="categoriaId">Categoría</label>
            <select name="categoriaId" id="categoria">
                <option value="" selected disabled>--Elige una categoria--</option>
                <% categorias.forEach(categoria => { %>
                    <option 
                        value="<%=categoria.id%>" 
                        <%= (grupo.categoriaId === categoria.id) ? 'selected' : '' %> 
                    >
                    <%=categoria.nombre%>    
                    </option>
                <% }) %>
            </select>
        </div>
        
        <div class="campo">
            <label for="url">Sitio web</label>
            <input type="url" name="url" id="url" value="<%=grupo.url%>" placeholder="Sitio web http://">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Actualizar" class="btn btn-rosa">
        </div>
    </form>

</main>