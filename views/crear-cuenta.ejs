<main class="contenedor contenedor-formularios">
    <h1> <%- nombrePagina %></h1>

    <form action="/crear-cuenta" method="POST" class="default-form">

        <div class="campo">
            <label for="email">Email</label>
            <input type="email" name="email" placeholder="Tu email">
        </div>
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" placeholder="Tu nombre">
        </div>
        <div class="campo">
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="********">
        </div>
        <div class="campo">
            <label for="repetir-password">Repetir Password</label>
            <input type="password" name="repetir-password" placeholder="********">
        </div>

        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Crear Cuenta">
        </div>

    </form>
</main>